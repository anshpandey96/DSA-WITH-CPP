#include <iostream>
using namespace std;

//  Recursive Bubble Sort Function
void bubbleSortRecursive(int arr[], int n) {
    // Base case: If array size is 1, it's already sorted
    if (n == 1)
        return;

    // One pass of bubble sort: move largest to end
    for (int i = 0; i < n - 1; i++) {
        if (arr[i] > arr[i + 1]) {
            swap(arr[i], arr[i + 1]);
        }
    }

    // Recur for remaining array (excluding last element)
    bubbleSortRecursive(arr, n - 1);
}

void printArray(int arr[], int n) {
    for (int i = 0; i < n; i++)
        cout << arr[i] << " ";
    cout << endl;
}

int main() {
    int arr[] = {64, 34, 25, 12, 22, 11, 90};
    int n = sizeof(arr) / sizeof(arr[0]);

    bubbleSortRecursive(arr, n);
    cout << "Sorted array: ";
    printArray(arr, n);

    return 0;
}
